<div class="min-h-screen bg-gradient-to-br from-brown/5 via-white to-green/5 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Logo/Brand -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-brown mb-2">â˜• Acer Coffee</h1>
      <p class="text-gray-600">Create your account and start your coffee journey</p>
    </div>

    <!-- Sign Up Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <div class="px-8 py-10">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification message: f.object.errors.full_messages.first, class: "mb-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded-lg text-sm" if f.object.errors.any? %>

          <div class="space-y-5">
            <div class="grid grid-cols-2 gap-4">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: {
                            autocomplete: "given-name",
                            class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                          },
                          label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                          wrapper_html: { class: "mb-0" } %>

              <%= f.input :last_name,
                          required: true,
                          input_html: {
                            autocomplete: "family-name",
                            class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                          },
                          label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                          wrapper_html: { class: "mb-0" } %>
            </div>

            <%= f.input :email,
                        required: true,
                        input_html: {
                          autocomplete: "email",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        wrapper_html: { class: "mb-0" } %>

            <%= f.input :phone,
                        required: false,
                        input_html: {
                          autocomplete: "tel",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        wrapper_html: { class: "mb-0" } %>

            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: {
                          autocomplete: "new-password",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        hint_html: { class: "text-xs text-gray-500 mt-1" },
                        wrapper_html: { class: "mb-0" } %>

            <%= f.input :password_confirmation,
                        required: true,
                        label: "Confirm Password",
                        input_html: {
                          autocomplete: "new-password",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        wrapper_html: { class: "mb-0" } %>
          </div>

          <div class="mt-6">
            <%= f.button :submit, "Create Account",
                        class: "w-full bg-brown text-white py-3 px-6 rounded-lg font-semibold hover:bg-brown/90 transition-all shadow-md hover:shadow-lg" %>
          </div>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-100">
        <div class="text-center text-sm text-gray-600">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-brown hover:text-brown/80 font-semibold" %>
        </div>
      </div>
    </div>

    <!-- Terms & Privacy -->
    <div class="mt-6 text-center">
      <p class="text-xs text-gray-500">
        By creating an account, you agree to our Terms of Service and Privacy Policy
      </p>
    </div>
  </div>
</div>
