<%= content_for :skip_container, true %>

<%= render 'devise/shared/auth_wrapper' do %>
  <h1 class="text-3xl font-serif mb-6 text-gray-900">Create Your Account</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <% if resource.respond_to?(:first_name) && resource.respond_to?(:last_name) %>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :first_name, class: "block mb-2 text-gray-700 font-medium" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "input-field" %>
        </div>
        <div>
          <%= f.label :last_name, class: "block mb-2 text-gray-700 font-medium" %>
          <%= f.text_field :last_name, autocomplete: "family-name", class: "input-field" %>
        </div>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block mb-2 text-gray-700 font-medium" %>
      <%= f.email_field :email, autofocus: !resource.respond_to?(:first_name), autocomplete: "email", class: "input-field" %>
    </div>

    <div>
      <%= f.label :password, class: "block mb-2 text-gray-700 font-medium" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block mb-2 text-gray-700 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div>
      <%= f.submit "Sign Up", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    Already have an account?
    <%= link_to "Sign In", new_session_path(resource_name), class: "text-deshojo hover:text-deshojo/80 hover:underline ml-1 font-medium" %>
  </div>
<% end %>
