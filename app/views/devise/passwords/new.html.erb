<div class="min-h-screen bg-gradient-to-br from-brown/5 via-white to-green/5 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Logo/Brand -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-brown mb-2">â˜• Coffee Co.</h1>
      <p class="text-gray-600">Reset your password</p>
    </div>

    <!-- Reset Password Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <div class="px-8 py-10">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Forgot your password?</h2>
          <p class="text-sm text-gray-600">Enter your email and we'll send you instructions to reset your password.</p>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification message: f.object.errors.full_messages.first, class: "mb-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded-lg text-sm" if f.object.errors.any? %>

          <div class="space-y-5">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { 
                          autocomplete: "email",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        wrapper_html: { class: "mb-0" } %>
          </div>

          <div class="mt-6">
            <%= f.button :submit, "Send Reset Instructions", 
                        class: "w-full bg-brown text-white py-3 px-6 rounded-lg font-semibold hover:bg-brown/90 transition-all shadow-md hover:shadow-lg" %>
          </div>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-100">
        <div class="flex items-center justify-between text-sm">
          <%= link_to "Back to Sign In", new_session_path(resource_name), class: "text-brown hover:text-brown/80 font-medium" %>
          <%= link_to "Create Account", new_registration_path(resource_name), class: "text-brown hover:text-brown/80 font-medium" %>
        </div>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Remember your password? 
        <%= link_to "Sign in here", new_session_path(resource_name), class: "text-brown hover:text-brown/80 font-semibold" %>
      </p>
    </div>
  </div>
</div>
