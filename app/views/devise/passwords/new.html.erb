<%= content_for :skip_container, true %>

<%= render 'devise/shared/auth_wrapper' do %>
  <h1 class="text-3xl font-serif mb-6">Reset Your Password</h1>
  <p class="text-cream/70 mb-6">Enter your email address and we'll send you instructions to reset your password.</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block mb-2 text-cream/70" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div>
      <%= f.submit "Send Reset Instructions", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= link_to "Back to Sign In", new_session_path(resource_name), class: "text-deshojo hover:underline" %>
  </div>
<% end %>
