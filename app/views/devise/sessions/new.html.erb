<%= content_for :skip_container, true %>

<%= render 'devise/shared/auth_wrapper' do %>
  <h1 class="text-3xl font-serif mb-6 text-gray-900">Sign In</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email, class: "block mb-2 text-gray-700 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div>
      <%= f.label :password, class: "block mb-2 text-gray-700 font-medium" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex justify-between items-center text-sm text-gray-600">
        <label class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-deshojo focus:ring-deshojo focus:ring-offset-white" %>
          <span>Remember me</span>
        </label>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-deshojo hover:text-deshojo/80 hover:underline" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Sign In", class: "btn-secondary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    Don't have an account?
    <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-deshojo hover:text-deshojo/80 hover:underline ml-1 font-medium" %>
  </div>
<% end %>
