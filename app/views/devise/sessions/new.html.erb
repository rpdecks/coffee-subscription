<div class="min-h-screen bg-gradient-to-br from-brown/5 via-white to-green/5 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Logo/Brand -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-brown mb-2">â˜• Acer Coffee</h1>
      <p class="text-gray-600">Welcome back! Sign in to your account</p>
    </div>

    <!-- Sign In Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <div class="px-8 py-10">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="space-y-5">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: {
                          autocomplete: "email",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        wrapper_html: { class: "mb-0" } %>

            <%= f.input :password,
                        required: false,
                        input_html: {
                          autocomplete: "current-password",
                          class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown/20 focus:border-brown transition-colors"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        wrapper_html: { class: "mb-0" } %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center mt-6">
              <%= f.input_field :remember_me, as: :boolean, class: "h-4 w-4 text-brown border-gray-300 rounded focus:ring-brown/20 mr-4 flex-shrink-0" %>
              <span class="text-sm text-gray-700 leading-none">Remember me</span>
            </div>
          <% end %>

          <div class="mt-6">
            <%= f.button :submit, "Sign In",
                        class: "w-full bg-brown text-white py-3 px-6 rounded-lg font-semibold hover:bg-brown/90 transition-all shadow-md hover:shadow-lg" %>
          </div>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-100">
        <div class="flex items-center justify-between text-sm">
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-brown hover:text-brown/80 font-medium" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-brown hover:text-brown/80 font-medium" %>
        </div>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        New to Acer Coffee?
        <%= link_to "Create an account", new_registration_path(resource_name), class: "text-brown hover:text-brown/80 font-semibold" %>
      </p>
    </div>
  </div>
</div>
