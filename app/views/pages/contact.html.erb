<div class="max-w-2xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Contact Us</h1>
  
  <div class="bg-white p-8 rounded-lg shadow">
    <p class="text-gray-700 mb-6">Have a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
    
    <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :subject, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :message, required: true, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Send Message", class: "w-full bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">Other Ways to Reach Us</h2>
    <p class="text-gray-700 mb-2"><strong>Email:</strong> hello@coffeeco.com</p>
    <p class="text-gray-700"><strong>Phone:</strong> (555) 123-4567</p>
  </div>
</div>
