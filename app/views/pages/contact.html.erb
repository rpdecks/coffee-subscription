<div class="max-w-2xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Contact Us</h1>

  <div class="bg-white p-8 rounded-lg shadow">
    <p class="text-gray-700 mb-6">Have a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>

    <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6", data: { turbo: false } do |f| %>
      <!-- Honeypot field - hidden from humans, visible to bots -->
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <%= f.text_field :website, tabindex: -1, autocomplete: "off" %>
      </div>

      <!-- Timestamp for submission speed check -->
      <%= f.hidden_field :form_loaded_at, value: Time.current.to_i %>

      <div>
        <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-brown/20 focus:border-brown" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-brown/20 focus:border-brown" %>
      </div>

      <div>
        <%= f.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :subject, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-brown/20 focus:border-brown" %>
      </div>

      <div>
        <%= f.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :message, required: true, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-brown/20 focus:border-brown" %>
      </div>

      <div>
        <%= f.submit "Send Message", class: "w-full bg-brown text-white px-6 py-3 rounded-md hover:bg-brown/90 cursor-pointer font-semibold" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">Other Ways to Reach Us</h2>
    <div class="space-y-4">
      <div>
        <p class="text-gray-700"><strong>Email:</strong> support@acercoffee.com</p>
      </div>
      <div>
        <p class="text-gray-700"><strong>Phone:</strong> (678) 824-5673</p>
      </div>
      <div>
        <p class="text-gray-700 font-semibold mb-1">Address:</p>
        <p class="text-gray-700">11134 Broad River Rd</p>
        <p class="text-gray-700">Ste B #3032</p>
        <p class="text-gray-700">Irmo, SC 29063</p>
      </div>
    </div>
  </div>
</div>
