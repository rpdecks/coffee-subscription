<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Acer Coffee</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Admin Navigation -->
    <nav class="bg-gray-900 text-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo & Brand -->
          <div class="flex items-center gap-8">
            <%= link_to admin_root_path, class: "flex items-center gap-2 text-xl font-bold hover:text-gray-300" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              Admin Panel
            <% end %>

            <!-- Main Navigation -->
            <div class="hidden md:flex items-center gap-1">
              <%= link_to "Dashboard", admin_root_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{current_page?(admin_root_path) ? 'bg-gray-800' : ''}" %>
              <%= link_to "Orders", admin_orders_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{current_page?(admin_orders_path) ? 'bg-gray-800' : ''}" %>
              <%= link_to "Subscriptions", admin_subscriptions_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{current_page?(admin_subscriptions_path) ? 'bg-gray-800' : ''}" %>
              <%= link_to "Plans", admin_subscription_plans_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{current_page?(admin_subscription_plans_path) ? 'bg-gray-800' : ''}" %>
              <%= link_to "Products", admin_products_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{current_page?(admin_products_path) ? 'bg-gray-800' : ''}" %>
              <%= link_to "Inventory", admin_inventory_index_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{request.path.start_with?('/admin/inventory') ? 'bg-gray-800' : ''}" %>
              <%= link_to "Production Plan", admin_production_plan_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{request.path == admin_production_plan_path ? 'bg-gray-800' : ''}" %>
              <%= link_to "Roasted Intake", new_admin_roasted_inventory_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{request.path == new_admin_roasted_inventory_path ? 'bg-gray-800' : ''}" %>
              <%= link_to "Customers", admin_customers_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors #{current_page?(admin_customers_path) ? 'bg-gray-800' : ''}" %>
            </div>
          </div>

          <!-- Right Side -->
          <div class="flex items-center gap-4">
            <%= link_to "View Site", root_path, target: "_blank", class: "text-sm text-gray-300 hover:text-white" %>
            <div class="border-l border-gray-700 h-6"></div>
            <div class="flex items-center gap-2">
              <span class="text-sm text-gray-300"><%= current_user.full_name %></span>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-sm text-gray-300 hover:text-white" %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
          <%= notice %>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
          <%= alert %>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <%= yield %>
    </main>
  </body>
</html>
