<div class="space-y-8">
  <!-- Page Header -->
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600 mt-1">Overview of your coffee subscription business</p>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Customers -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Customers</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_customers %></p>
        </div>
        <div class="bg-blue-100 p-3 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Active Subscriptions</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @active_subscriptions %></p>
        </div>
        <div class="bg-green-100 p-3 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Total Revenue -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Revenue</p>
          <p class="text-3xl font-bold text-gray-900 mt-2">$<%= sprintf("%.2f", @total_revenue / 100.0) %></p>
        </div>
        <div class="bg-purple-100 p-3 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Pending Orders -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Pending Orders</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @pending_orders %></p>
        </div>
        <div class="bg-orange-100 p-3 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="h-8 w-8 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Orders -->
    <div class="bg-white rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Recent Orders</h2>
          <%= link_to "View All", admin_orders_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @recent_orders.any? %>
          <% @recent_orders.each do |order| %>
            <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
              <%= link_to admin_order_path(order), class: "flex items-center justify-between" do %>
                <div class="flex-1">
                  <p class="font-medium text-gray-900"><%= order.order_number %></p>
                  <p class="text-sm text-gray-600"><%= order.user.full_name %></p>
                </div>
                <div class="text-right">
                  <p class="font-medium text-gray-900">$<%= sprintf("%.2f", order.total_cents / 100.0) %></p>
                  <span class="inline-block px-2 py-1 text-xs font-medium rounded-full <%= order.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : order.status == 'delivered' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= order.status.titleize %>
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center text-gray-500">
            No orders yet
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Subscriptions -->
    <div class="bg-white rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Recent Subscriptions</h2>
          <%= link_to "View All", admin_subscriptions_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @recent_subscriptions.any? %>
          <% @recent_subscriptions.each do |subscription| %>
            <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
              <%= link_to admin_subscription_path(subscription), class: "flex items-center justify-between" do %>
                <div class="flex-1">
                  <p class="font-medium text-gray-900"><%= subscription.user.full_name %></p>
                  <p class="text-sm text-gray-600"><%= subscription.subscription_plan.name %></p>
                </div>
                <div class="text-right">
                  <span class="inline-block px-2 py-1 text-xs font-medium rounded-full <%= subscription.status == 'active' ? 'bg-green-100 text-green-800' : subscription.status == 'paused' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= subscription.status.titleize %>
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center text-gray-500">
            No subscriptions yet
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Subscription Status Chart -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Subscriptions by Status</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% @subscriptions_by_status.each do |status, count| %>
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-3xl font-bold text-gray-900"><%= count %></p>
          <p class="text-sm text-gray-600 mt-1"><%= status.titleize %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
