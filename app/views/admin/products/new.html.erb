<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to admin_products_path, class: "text-gray-600 hover:text-gray-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Add New Product</h1>
        <p class="text-gray-600 mt-1">Create a new coffee or merchandise product</p>
      </div>
    </div>
  </div>

  <!-- Product Form -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <%= form_with model: [:admin, @product], class: "space-y-6", data: { turbo: false } do |f| %>
      <% if @product.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Product Name -->
        <div class="md:col-span-2">
          <%= f.label :name, "Product Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name,
              placeholder: "e.g., Ethiopian Yirgacheffe",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Description -->
        <div class="md:col-span-2">
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description,
              rows: 4,
              placeholder: "Detailed product description...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Product Images -->
        <div class="md:col-span-2">
          <%= f.label :images, "Product Images", class: "block text-sm font-medium text-gray-700 mb-2" %>

          <div
            class="w-full px-4 py-4 border border-dashed border-gray-300 rounded-lg bg-white cursor-pointer"
            data-controller="admin-image-upload"
            data-action="click->admin-image-upload#open"
          >
            <div class="text-sm text-gray-700 font-medium" data-admin-image-upload-target="label">Drag images here or click to choose</div>
            <div class="text-sm text-gray-500 mt-1">JPG/PNG/etc. Duplicate filenames are skipped.</div>
            <%= f.file_field :images,
                multiple: true,
                accept: "image/*",
                class: "hidden",
                data: { "admin-image-upload-target": "input" } %>
          </div>

          <p class="mt-2 text-sm text-gray-500">You can choose the featured image after saving.</p>
        </div>

        <!-- Product Type -->
        <div>
          <%= f.label :product_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :product_type,
              Product.product_types.keys.map { |t| [t.titleize, t] },
              { prompt: "Select type" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Roast Type (Coffee only) -->
        <div>
          <%= f.label :roast_type, "Roast Type (Coffee only)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :roast_type,
              Product.roast_types.keys.map { |t| [t.titleize, t] },
              { include_blank: "Not applicable" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Signature (Palmatum), Light (Deshojo), Medium (Arakawa), Dark (Kiyohime)</p>
        </div>

        <!-- Price -->
        <div>
          <%= f.label :price, "Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :price,
              step: 0.01,
              min: 0,
              placeholder: "19.99",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Weight -->
        <div>
          <%= f.label :weight_oz, "Weight (oz)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :weight_oz,
              value: ounces_field_value(@product.weight_oz),
              step: 0.1,
              min: 0,
              placeholder: "12",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Leave blank if not applicable</p>
        </div>

        <!-- Inventory Count -->
        <div>
          <%= f.label :inventory_count, "Inventory Count", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :inventory_count,
              min: 0,
              placeholder: "100",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Leave blank for unlimited inventory</p>
        </div>

        <!-- Active Status -->
        <div class="md:col-span-2">
          <div class="flex items-center">
            <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :active, "Active (visible to customers)", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>

        <!-- Stripe Integration (Optional) -->
        <div class="md:col-span-2">
          <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b border-gray-200">Stripe Integration (Optional)</h3>
        </div>

        <div>
          <%= f.label :stripe_product_id, "Stripe Product ID", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :stripe_product_id,
              placeholder: "prod_...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm" %>
        </div>

        <div>
          <%= f.label :stripe_price_id, "Stripe Price ID", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :stripe_price_id,
              placeholder: "price_...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm" %>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <div>
          <%= link_to "Cancel", admin_products_path, class: "px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
        </div>
        <div class="flex gap-3">
          <%= f.submit "Create Product", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
