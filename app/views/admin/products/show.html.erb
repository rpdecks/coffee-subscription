<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to admin_products_path, class: "text-gray-600 hover:text-gray-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @product.name %></h1>
        <p class="text-gray-600 mt-1"><%= @product.product_type&.titleize || 'No type set' %></p>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_product_path(@product), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      <%= button_to "Delete", admin_product_path(@product), method: :delete, data: { turbo_confirm: "Are you sure? This action cannot be undone." }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" %>
    </div>
  </div>

  <!-- Status Bar -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-6">
        <div>
          <div class="text-sm text-gray-500 mb-1">Status</div>
          <span class="px-3 py-1.5 inline-flex text-sm font-semibold rounded-full <%= @product.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @product.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>
        <div class="border-l border-gray-200 pl-6">
          <div class="text-sm text-gray-500 mb-1">Price</div>
          <div class="text-lg font-semibold text-gray-900">
            <%= number_to_currency(@product.price) %>
          </div>
        </div>
        <div class="border-l border-gray-200 pl-6">
          <div class="text-sm text-gray-500 mb-1">Inventory</div>
          <div class="text-lg font-semibold text-gray-900">
            <% if @product.inventory_count.nil? %>
              <span class="text-gray-600">Unlimited</span>
            <% elsif @product.inventory_count > 0 %>
              <%= @product.inventory_count %>
            <% else %>
              <span class="text-red-600">Out of Stock</span>
            <% end %>
          </div>
        </div>
        <% if @product.weight_oz %>
          <div class="border-l border-gray-200 pl-6">
            <div class="text-sm text-gray-500 mb-1">Weight</div>
            <div class="text-lg font-semibold text-gray-900">
              <%= format_ounces(@product.weight_oz) %>
            </div>
          </div>
        <% end %>
      </div>

      <div>
        <%= button_to toggle_active_admin_product_path(@product), method: :patch, class: "px-4 py-2 #{@product.active? ? 'bg-gray-100 text-gray-700 hover:bg-gray-200' : 'bg-green-100 text-green-800 hover:bg-green-200'} rounded-lg transition-colors" do %>
          <%= @product.active? ? 'Deactivate' : 'Activate' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Product Details -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Product Details</h2>

        <div class="space-y-4">
          <div>
            <div class="text-sm font-medium text-gray-700 mb-1">Name</div>
            <div class="text-base text-gray-900"><%= @product.name %></div>
          </div>

          <% if @product.description.present? %>
            <div>
              <div class="text-sm font-medium text-gray-700 mb-1">Description</div>
              <div class="text-base text-gray-900 leading-relaxed whitespace-pre-wrap"><%= @product.description %></div>
            </div>
          <% end %>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <div class="text-sm font-medium text-gray-700 mb-1">Product Type</div>
              <span class="px-2 py-1 inline-flex text-xs font-semibold rounded-full <%= @product.coffee? ? 'bg-brown-100 text-brown-800' : 'bg-purple-100 text-purple-800' %>">
                <%= @product.product_type.titleize %>
              </span>
            </div>

            <div>
              <div class="text-sm font-medium text-gray-700 mb-1">Created</div>
              <div class="text-base text-gray-900"><%= @product.created_at.strftime("%b %d, %Y") %></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Order History -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Recent Orders</h2>
        <div class="text-center py-8">
          <p class="text-gray-500">Order history feature coming soon</p>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Images -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Images</h2>

        <% images = @product.carousel_images %>
        <% if images.any? %>
          <div class="grid grid-cols-2 gap-4">
            <% images.each do |img| %>
              <div class="relative">
                <div class="aspect-[4/3] rounded-lg border border-gray-200 overflow-hidden bg-gray-50">
                  <%= image_tag img, class: "h-full w-full object-cover" %>
                </div>
                <% if img.respond_to?(:id) && @product.featured_image_attachment_id.present? && @product.featured_image_attachment_id.to_i == img.id %>
                  <span class="absolute top-2 left-2 px-2 py-1 text-xs font-semibold rounded bg-blue-600 text-white">Featured</span>
                <% end %>
              </div>
            <% end %>
          </div>
          <p class="mt-3 text-xs text-gray-500">Featured image appears first in carousels.</p>
        <% else %>
          <p class="text-sm text-gray-500">No images uploaded yet.</p>
        <% end %>
      </div>

      <!-- Stripe Integration -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Stripe Integration</h2>
        <div class="space-y-3">
          <div>
            <div class="text-sm text-gray-500 mb-1">Product ID</div>
            <% if @product.stripe_product_id.present? %>
              <div class="text-sm text-gray-900 font-mono break-all"><%= @product.stripe_product_id %></div>
            <% else %>
              <div class="text-sm text-gray-400">Not configured</div>
            <% end %>
          </div>

          <div>
            <div class="text-sm text-gray-500 mb-1">Price ID</div>
            <% if @product.stripe_price_id.present? %>
              <div class="text-sm text-gray-900 font-mono break-all"><%= @product.stripe_price_id %></div>
            <% else %>
              <div class="text-sm text-gray-400">Not configured</div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Inventory Management -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Inventory</h2>
          <%= link_to "View All", admin_inventory_index_path(search: @product.name), class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>

        <% if @product.coffee? %>
          <!-- Coffee Inventory Breakdown -->
          <div class="space-y-4">
            <div class="grid grid-cols-3 gap-2 text-center">
              <div class="p-3 bg-green-50 rounded-lg border border-green-200">
                <div class="text-xs text-green-600 font-medium mb-1">Green</div>
                <div class="text-lg font-bold text-green-900">
                  <%= number_with_precision(@product.total_green_inventory, precision: 1) %> <span class="text-xs font-normal">lbs</span>
                </div>
              </div>
              <div class="p-3 bg-amber-50 rounded-lg border border-amber-200">
                <div class="text-xs text-amber-600 font-medium mb-1">Roasted</div>
                <div class="text-lg font-bold text-amber-900">
                  <%= number_with_precision(@product.total_roasted_inventory, precision: 1) %> <span class="text-xs font-normal">lbs</span>
                </div>
              </div>
              <div class="p-3 bg-blue-50 rounded-lg border border-blue-200">
                <div class="text-xs text-blue-600 font-medium mb-1">Packaged</div>
                <div class="text-lg font-bold text-blue-900">
                  <%= number_with_precision(@product.total_packaged_inventory, precision: 1) %> <span class="text-xs font-normal">lbs</span>
                </div>
              </div>
            </div>

            <div class="pt-3 border-t border-gray-200">
              <div class="flex justify-between items-center">
                <div class="text-sm text-gray-500">Total Inventory</div>
                <div class="text-xl font-bold text-gray-900">
                  <%= number_with_precision(@product.total_inventory_pounds, precision: 1) %> lbs
                </div>
              </div>
            </div>

            <% fresh_roasted = @product.fresh_roasted_inventory %>
            <% if fresh_roasted > 0 %>
              <div class="p-3 bg-green-50 border border-green-200 rounded-lg">
                <div class="text-sm text-green-800">
                  <strong>Fresh:</strong> <%= number_with_precision(fresh_roasted, precision: 1) %> lbs roasted within 3 weeks
                </div>
              </div>
            <% end %>

            <% if @product.low_on_inventory?(10.0) %>
              <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                <div class="text-sm text-yellow-800">
                  <strong>Low Stock Alert:</strong> Only <%= number_with_precision(@product.total_inventory_pounds, precision: 1) %> lbs total
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <!-- Merch Simple Inventory -->
          <div class="space-y-3">
            <div>
              <div class="text-sm text-gray-500 mb-1">Current Stock</div>
              <div class="text-2xl font-bold text-gray-900">
                <%= number_with_precision(@product.total_inventory_pounds, precision: 0) %> units
              </div>
            </div>

            <% if @product.inventory_count && @product.inventory_count <= 10 %>
              <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                <div class="text-sm text-yellow-800">
                  <strong>Low Stock Alert:</strong> Only <%= @product.inventory_count %> unit(s) remaining
                </div>
              </div>
            <% end %>

            <% if @product.inventory_count && @product.inventory_count <= 0 %>
              <div class="p-3 bg-red-50 border border-red-200 rounded-lg">
                <div class="text-sm text-red-800">
                  <strong>Out of Stock:</strong> This product is currently unavailable
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="mt-4 pt-4 border-t border-gray-200">
          <%= link_to "Manage Inventory", admin_inventory_index_path(search: @product.name), class: "block w-full text-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
        </div>
      </div>

      <!-- Pricing Info -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Pricing</h2>
        <div class="space-y-3">
          <div>
            <div class="text-sm text-gray-500 mb-1">Price</div>
            <div class="text-2xl font-bold text-gray-900"><%= number_to_currency(@product.price) %></div>
          </div>

          <div class="text-xs text-gray-500">
            Price in cents: <%= @product.price_cents %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
