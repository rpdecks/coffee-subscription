<% status = green_coffee.freshness_status %>
<% months = green_coffee.months_since_harvest %>
<% if months.nil? %>
  <span class="text-sm text-gray-400">â€”</span>
<% else %>
  <% badge_class = case status
    when "fresh" then "bg-green-100 text-green-800"
    when "good" then "bg-yellow-100 text-yellow-800"
    when "aging" then "bg-orange-100 text-orange-800"
    when "past_crop" then "bg-red-100 text-red-800"
    else "bg-gray-100 text-gray-800"
    end %>
  <span class="px-2 py-1 inline-flex text-xs font-semibold rounded-full <%= badge_class %>">
    <%= status.titleize %> (<%= months %> mo)
  </span>
<% end %>
