<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to admin_subscription_plans_path, class: "text-gray-600 hover:text-gray-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">New Subscription Plan</h1>
        <p class="text-gray-600 mt-1">Create a new subscription plan for customers</p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <%= form_with model: [:admin, @subscription_plan], class: "space-y-6" do |f| %>
      <% if @subscription_plan.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@subscription_plan.errors.count, "error") %> prohibited this plan from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @subscription_plan.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Plan Name -->
        <div class="md:col-span-2">
          <%= f.label :name, "Plan Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name,
              placeholder: "e.g., Weekly - 1 Bag",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Description -->
        <div class="md:col-span-2">
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description,
              rows: 3,
              placeholder: "Plan description...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Frequency -->
        <div>
          <%= f.label :frequency, "Delivery Frequency", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :frequency,
              SubscriptionPlan.frequencies.keys.map { |f| [f.titleize, f] },
              { prompt: "Select frequency" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Bags per Delivery -->
        <div>
          <%= f.label :bags_per_delivery, "Bags per Delivery", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :bags_per_delivery,
              min: 1,
              placeholder: "1",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Price -->
        <div>
          <%= f.label :price, "Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :price,
              step: 0.01,
              min: 0,
              placeholder: "19.99",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Stripe Plan ID -->
        <div>
          <%= f.label :stripe_plan_id, "Stripe Plan ID (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :stripe_plan_id,
              placeholder: "plan_...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm" %>
        </div>

        <!-- Active Status -->
        <div class="md:col-span-2">
          <div class="flex items-center">
            <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :active, "Active (visible to customers)", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <div>
          <%= link_to "Cancel", admin_subscription_plans_path, class: "px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
        </div>
        <div>
          <%= f.submit "Create Plan", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
