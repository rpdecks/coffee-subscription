<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to admin_subscription_plans_path, class: "text-gray-600 hover:text-gray-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @subscription_plan.name %></h1>
        <p class="text-gray-600 mt-1"><%= @subscription_plan.frequency.titleize %> Subscription</p>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_subscription_plan_path(@subscription_plan), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      <% if @subscriptions_count == 0 %>
        <%= button_to "Delete", admin_subscription_plan_path(@subscription_plan), method: :delete, data: { confirm: "Are you sure you want to delete this plan?" }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" %>
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Total Subscriptions</p>
          <p class="text-2xl font-bold text-gray-900"><%= @subscriptions_count %></p>
        </div>
        <div class="p-3 bg-blue-100 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Active Subscriptions</p>
          <p class="text-2xl font-bold text-gray-900"><%= @active_subscriptions_count %></p>
        </div>
        <div class="p-3 bg-green-100 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500">Monthly Revenue</p>
          <p class="text-2xl font-bold text-gray-900">
            <%= number_to_currency(@active_subscriptions_count * @subscription_plan.price * 4) %>
          </p>
        </div>
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Plan Details -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Plan Details</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <div class="text-sm text-gray-500 mb-1">Plan Name</div>
        <div class="text-base font-medium text-gray-900"><%= @subscription_plan.name %></div>
      </div>

      <div>
        <div class="text-sm text-gray-500 mb-1">Status</div>
        <span class="px-2 py-1 inline-flex text-xs font-semibold rounded-full <%= @subscription_plan.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= @subscription_plan.active? ? 'Active' : 'Inactive' %>
        </span>
      </div>

      <div>
        <div class="text-sm text-gray-500 mb-1">Frequency</div>
        <div class="text-base font-medium text-gray-900"><%= @subscription_plan.frequency.titleize %></div>
      </div>

      <div>
        <div class="text-sm text-gray-500 mb-1">Bags per Delivery</div>
        <div class="text-base font-medium text-gray-900"><%= @subscription_plan.bags_per_delivery %></div>
      </div>

      <div>
        <div class="text-sm text-gray-500 mb-1">Price</div>
        <div class="text-2xl font-bold text-gray-900"><%= number_to_currency(@subscription_plan.price) %></div>
      </div>

      <div>
        <div class="text-sm text-gray-500 mb-1">Frequency in Days</div>
        <div class="text-base font-medium text-gray-900"><%= @subscription_plan.frequency_in_days %> days</div>
      </div>

      <% if @subscription_plan.description.present? %>
        <div class="md:col-span-2">
          <div class="text-sm text-gray-500 mb-1">Description</div>
          <div class="text-base text-gray-900"><%= @subscription_plan.description %></div>
        </div>
      <% end %>

      <% if @subscription_plan.stripe_plan_id.present? %>
        <div class="md:col-span-2">
          <div class="text-sm text-gray-500 mb-1">Stripe Plan ID</div>
          <div class="text-sm text-gray-900 font-mono"><%= @subscription_plan.stripe_plan_id %></div>
        </div>
      <% end %>

      <div class="md:col-span-2">
        <div class="text-sm text-gray-500 mb-1">Created</div>
        <div class="text-base text-gray-900"><%= @subscription_plan.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
      </div>
    </div>
  </div>

  <!-- Warning for Plans with Active Subscriptions -->
  <% if @subscriptions_count > 0 %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">
            Active Subscriptions
          </h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>This plan has <%= @subscriptions_count %> subscription(s). Be careful when modifying this plan as changes may affect existing subscribers.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
