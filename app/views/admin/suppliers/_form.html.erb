<%= form_with model: [:admin, supplier], class: "space-y-6" do |f| %>
  <% if supplier.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There <%= supplier.errors.count == 1 ? 'was' : 'were' %> <%= pluralize(supplier.errors.count, "error") %>:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% supplier.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="md:col-span-2">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, placeholder: "e.g. Sweet Maria's", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :url, "Website URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.url_field :url, placeholder: "https://www.sweetmarias.com", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :contact_email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :contact_email, placeholder: "orders@example.com", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :contact_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :contact_name, placeholder: "Contact person", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="md:col-span-2">
      <%= f.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :notes, rows: 3, placeholder: "Any notes about this supplier...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div class="flex gap-4 pt-4 border-t border-gray-200">
    <%= f.submit class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium cursor-pointer" %>
    <%= link_to "Cancel", admin_suppliers_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium" %>
  </div>
<% end %>
