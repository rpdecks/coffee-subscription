<div class="max-w-4xl mx-auto space-y-6">
  <!-- Page Header -->
  <div class="flex items-center gap-4">
    <%= link_to admin_suppliers_path, class: "text-gray-600 hover:text-gray-900" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900"><%= @supplier.name %></h1>
  </div>

  <!-- Supplier Details -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <h3 class="text-sm font-medium text-gray-500">Website</h3>
        <% if @supplier.safe_url %>
          <p class="mt-1"><a href="<%= @supplier.safe_url %>" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800"><%= @supplier.url %></a></p>
        <% elsif @supplier.url.present? %>
          <p class="mt-1 text-gray-900"><%= @supplier.url %></p>
        <% else %>
          <p class="mt-1 text-gray-400">—</p>
        <% end %>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-500">Contact</h3>
        <p class="mt-1 text-gray-900"><%= @supplier.contact_name.presence || "—" %></p>
        <% if @supplier.contact_email.present? %>
          <p class="text-sm text-gray-500"><%= @supplier.contact_email %></p>
        <% end %>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-500">Summary</h3>
        <p class="mt-1 text-gray-900"><%= @supplier.green_coffee_count %> coffees, <%= number_with_precision(@supplier.total_green_inventory_lbs, precision: 1) %> lbs on hand</p>
      </div>
    </div>
    <% if @supplier.notes.present? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <h3 class="text-sm font-medium text-gray-500">Notes</h3>
        <p class="mt-1 text-gray-900"><%= simple_format(@supplier.notes) %></p>
      </div>
    <% end %>
    <div class="mt-4 pt-4 border-t border-gray-200 flex gap-3">
      <%= link_to "Edit", edit_admin_supplier_path(@supplier), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
      <%= button_to "Delete", admin_supplier_path(@supplier), method: :delete,
        data: { turbo_confirm: "Delete #{@supplier.name}?" },
        class: "px-4 py-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition-colors" %>
    </div>
  </div>

  <!-- Green Coffees from this Supplier -->
  <div class="flex items-center justify-between">
    <h2 class="text-xl font-bold text-gray-900">Green Coffees</h2>
    <%= link_to "Add Green Coffee", new_admin_green_coffee_path(supplier_id: @supplier.id), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <% if @green_coffees.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Origin</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Freshness</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @green_coffees.each do |gc| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to gc.name, admin_green_coffee_path(gc), class: "hover:text-blue-600" %>
                  </div>
                  <% if gc.lot_number.present? %>
                    <div class="text-xs text-gray-500">Lot: <%= gc.lot_number %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= gc.display_origin %></div>
                  <% if gc.display_details.present? %>
                    <div class="text-xs text-gray-500"><%= gc.display_details %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-900"><%= number_with_precision(gc.quantity_lbs, precision: 1) %> lbs</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if gc.cost_per_lb %>
                    <span class="text-sm text-gray-900"><%= number_to_currency(gc.cost_per_lb) %>/lb</span>
                  <% else %>
                    <span class="text-sm text-gray-400">—</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= render partial: "admin/green_coffees/freshness_badge", locals: { green_coffee: gc } %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
                  <%= link_to "View", admin_green_coffee_path(gc), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_admin_green_coffee_path(gc), class: "text-gray-600 hover:text-gray-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @pagy.pages > 1 %>
        <div class="px-6 py-3 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="text-sm text-gray-700">
              Showing <span class="font-medium"><%= @pagy.from %></span> to <span class="font-medium"><%= @pagy.to %></span> of <span class="font-medium"><%= @pagy.count %></span> green coffees
            </div>
            <div class="flex items-center gap-2">
              <%== @pagy.series_nav %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-8 text-center">
        <p class="text-gray-500">No green coffees from this supplier yet.</p>
        <%= link_to "Add Green Coffee", new_admin_green_coffee_path(supplier_id: @supplier.id), class: "mt-3 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
