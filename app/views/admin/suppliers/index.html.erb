<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Suppliers</h1>
      <p class="text-gray-600 mt-1">Manage your green coffee suppliers</p>
    </div>
    <%= link_to "Add Supplier", new_admin_supplier_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>

  <!-- Search -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <%= form_with url: admin_suppliers_path, method: :get, class: "flex gap-4" do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search suppliers...", class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <%= submit_tag "Search", class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
      <%= link_to "Clear", admin_suppliers_path, class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
    <% end %>
  </div>

  <!-- Suppliers Table -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <% if @suppliers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Green Coffees</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Inventory</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @suppliers.each do |supplier| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to supplier.name, admin_supplier_path(supplier), class: "hover:text-blue-600" %>
                  </div>
                  <% if supplier.url.present? %>
                    <div class="text-sm text-gray-500">
                      <%= link_to supplier.url.gsub(%r{https?://}, ''), supplier.url, target: "_blank", class: "hover:text-blue-600" %>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if supplier.contact_name.present? %>
                    <div class="text-sm text-gray-900"><%= supplier.contact_name %></div>
                  <% end %>
                  <% if supplier.contact_email.present? %>
                    <div class="text-sm text-gray-500"><%= supplier.contact_email %></div>
                  <% end %>
                  <% if supplier.contact_name.blank? && supplier.contact_email.blank? %>
                    <span class="text-sm text-gray-400">â€”</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-900"><%= supplier.green_coffee_count %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-900"><%= number_with_precision(supplier.total_green_inventory_lbs, precision: 1) %> lbs</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
                  <%= link_to "View", admin_supplier_path(supplier), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_admin_supplier_path(supplier), class: "text-gray-600 hover:text-gray-900" %>
                  <%= button_to "Delete", admin_supplier_path(supplier), method: :delete,
                    data: { turbo_confirm: "Delete #{supplier.name}? This will also delete all associated green coffees." },
                    class: "text-red-600 hover:text-red-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @pagy.pages > 1 %>
        <div class="px-6 py-3 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="text-sm text-gray-700">
              Showing <span class="font-medium"><%= @pagy.from %></span> to <span class="font-medium"><%= @pagy.to %></span> of <span class="font-medium"><%= @pagy.count %></span> suppliers
            </div>
            <div class="flex items-center gap-2">
              <%== @pagy.series_nav %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <p class="text-gray-500 text-lg">No suppliers yet.</p>
        <p class="text-gray-400 mt-2">Add your first supplier to start tracking green coffee purchases.</p>
        <%= link_to "Add Supplier", new_admin_supplier_path, class: "mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
