<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Subscriptions</h1>
      <p class="text-gray-600 mt-1">Manage customer subscriptions</p>
    </div>
  </div>

  <!-- Filters & Search -->
  <div class="bg-white rounded-lg border border-gray-200 p-4">
    <%= form_with url: admin_subscriptions_path, method: :get, class: "flex flex-col md:flex-row gap-4" do |f| %>
      <!-- Search -->
      <div class="flex-1">
        <%= f.text_field :search,
            value: params[:search],
            placeholder: "Search by customer name or email...",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Status Filter -->
      <div>
        <%= f.select :status,
            options_for_select(
              [['All Statuses', '']] + Subscription.statuses.keys.map { |s| [s.titleize, s] },
              params[:status]
            ),
            {},
            class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Filter", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
        <%= link_to "Clear", admin_subscriptions_path, class: "px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Subscriptions Table -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <% if @subscriptions.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plan</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Details</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Next Delivery</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @subscriptions.each do |subscription| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div>
                      <div class="text-sm font-medium text-gray-900"><%= subscription.user.full_name %></div>
                      <div class="text-sm text-gray-500"><%= subscription.user.email %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= subscription.subscription_plan.name %></div>
                  <div class="text-sm text-gray-500"><%= subscription.subscription_plan.frequency.titleize %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= subscription.bag_size || 'N/A' %></div>
                  <div class="text-sm text-gray-500"><%= subscription.quantity %> bag(s)</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if subscription.next_delivery_date %>
                    <div class="text-sm text-gray-900"><%= subscription.next_delivery_date.strftime("%b %d, %Y") %></div>
                  <% else %>
                    <div class="text-sm text-gray-500">N/A</div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_colors = {
                    'active' => 'bg-green-100 text-green-800',
                    'paused' => 'bg-yellow-100 text-yellow-800',
                    'cancelled' => 'bg-red-100 text-red-800',
                    'expired' => 'bg-gray-100 text-gray-800',
                    'past_due' => 'bg-orange-100 text-orange-800'
                  } %>
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_colors[subscription.status] || 'bg-gray-100 text-gray-800' %>">
                    <%= subscription.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= subscription.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "View", admin_subscription_path(subscription), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No subscriptions found</h3>
        <p class="mt-2 text-gray-500">
          <% if params[:search].present? || params[:status].present? %>
            Try adjusting your filters.
          <% else %>
            Subscriptions will appear here once customers subscribe.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @subscriptions.any? && @pagy.pages > 1 %>
    <div class="bg-white rounded-lg border border-gray-200 px-4 py-3">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="text-sm text-gray-700">
          Showing <span class="font-medium"><%= @pagy.from %></span> to <span class="font-medium"><%= @pagy.to %></span> of <span class="font-medium"><%= @pagy.count %></span> subscriptions
        </div>
        <div class="flex items-center gap-2">
          <%== pagy_nav(@pagy) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
