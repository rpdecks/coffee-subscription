<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Edit Roast Session</h1>
    <%= link_to "Back", admin_roast_session_path(@roast_session), class: "text-gray-500 hover:text-gray-700 text-sm" %>
  </div>

  <%= form_with(model: [:admin, @roast_session], class: "space-y-6") do |f| %>
    <% if @roast_session.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
        <ul class="list-disc list-inside text-sm">
          <% @roast_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 space-y-5">
      <h2 class="text-lg font-semibold text-gray-800 border-b pb-3">Roast Details</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Coffee Name *</label>
          <%= f.text_field :coffee_name, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Lot ID</label>
          <%= f.text_field :lot_id, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500" %>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Process</label>
          <%= f.text_field :process, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Batch Size (g) *</label>
          <%= f.number_field :batch_size_g, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500", min: 1 %>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Green Weight (g)</label>
          <%= f.number_field :green_weight_g, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500", min: 1 %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Roasted Weight (g)</label>
          <%= f.number_field :roasted_weight_g, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500", min: 1 %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
        <%= f.text_area :notes, class: "w-full rounded-lg border-gray-300 shadow-sm focus:ring-amber-500 focus:border-amber-500", rows: 3 %>
      </div>
    </div>

    <div class="flex items-center gap-4">
      <%= f.submit "Save Changes", class: "px-6 py-3 bg-amber-600 hover:bg-amber-700 text-white font-semibold rounded-lg shadow transition-colors cursor-pointer" %>
      <%= link_to "Cancel", admin_roast_session_path(@roast_session), class: "text-gray-500 hover:text-gray-700" %>
    </div>
  <% end %>
</div>
