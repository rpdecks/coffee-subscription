<div class="max-w-4xl mx-auto space-y-6">
  <!-- Page Header -->
  <div class="flex items-center gap-4">
    <%= link_to admin_inventory_index_path, class: "text-gray-600 hover:text-gray-900" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900">Add Inventory</h1>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <%= form_with model: @inventory_item, url: admin_inventory_index_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <!-- Error Messages -->
      <% if @inventory_item.errors.any? %>
        <div class="rounded-lg bg-red-50 border border-red-200 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There <%= @inventory_item.errors.count == 1 ? 'was' : 'were' %> <%= pluralize(@inventory_item.errors.count, "error") %>:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @inventory_item.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Product -->
        <div class="md:col-span-2">
          <%= f.label :product_id, "Product", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.collection_select :product_id, @products, :id, :name,
              { prompt: "Select a product" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- State -->
        <div>
          <%= f.label :state, "State", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :state,
              InventoryItem.states.keys.map { |s| [s.titleize, s] },
              { prompt: "Select state" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Green (unroasted), Roasted, or Packaged</p>
        </div>

        <!-- Quantity -->
        <div>
          <%= f.label :quantity, "Quantity (lbs)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :quantity,
              step: 0.01,
              min: 0,
              placeholder: "0.00",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Lot Number -->
        <div>
          <%= f.label :lot_number, "Lot Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :lot_number,
              placeholder: "Optional",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Received On -->
        <div>
          <%= f.label :received_on, "Received Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :received_on,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">When this inventory was received</p>
        </div>

        <!-- Roasted On -->
        <div>
          <%= f.label :roasted_on, "Roasted Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :roasted_on,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">For roasted coffee only</p>
        </div>

        <!-- Expires On -->
        <div>
          <%= f.label :expires_on, "Expiration Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :expires_on,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Optional expiration date</p>
        </div>

        <!-- Notes -->
        <div class="md:col-span-2">
          <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :notes,
              rows: 4,
              placeholder: "Any additional notes about this inventory...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex gap-4 pt-4 border-t border-gray-200">
        <%= f.submit "Create Inventory Item", class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
        <%= link_to "Cancel", admin_inventory_index_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium" %>
      </div>
    <% end %>
  </div>
</div>
