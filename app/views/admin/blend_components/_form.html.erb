<%= form_with model: [:admin, product, blend_component], class: "space-y-6" do |f| %>
  <% if blend_component.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There <%= blend_component.errors.count == 1 ? 'was' : 'were' %> <%= pluralize(blend_component.errors.count, "error") %>:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% blend_component.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :green_coffee_id, "Green Coffee", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.collection_select :green_coffee_id, green_coffees, :id, :name,
          { prompt: "Select a green coffee" },
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <p class="mt-1 text-sm text-gray-500">Only green coffees not already in this blend are shown</p>
    </div>

    <div>
      <%= f.label :percentage, "Percentage (%)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :percentage, step: 0.01, min: 0.01, max: 100, placeholder: "e.g. 40.00", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <% allocated = product.blend_components.where.not(id: blend_component.id).sum(:percentage) %>
      <p class="mt-1 text-sm text-gray-500">Currently allocated: <%= allocated %>% â€” remaining: <%= 100 - allocated %>%</p>
    </div>
  </div>

  <div class="flex gap-4 pt-4 border-t border-gray-200">
    <%= f.submit class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium cursor-pointer" %>
    <%= link_to "Cancel", admin_product_path(product), class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium" %>
  </div>
<% end %>
