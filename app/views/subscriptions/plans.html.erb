<div class="max-w-6xl mx-auto">
  <%= link_to "← Back", subscribe_path, class: "text-blue-600 hover:text-blue-800 mb-8 inline-block" %>

  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Choose Your Subscription Plan</h1>
    <p class="text-xl text-gray-600">Select a plan that fits your coffee routine. You can customize everything in the next step.</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
    <% @subscription_plans.each do |plan| %>
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow border-2 border-gray-100 hover:border-blue-600 overflow-hidden">
        <!-- Plan Header -->
        <div class="bg-gray-50 p-6 border-b border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= plan.name %></h2>
          <p class="text-gray-600 mb-4"><%= plan.description %></p>
          <div class="text-center">
            <span class="text-4xl font-bold text-gray-900">$<%= sprintf('%.2f', plan.price) %></span>
            <span class="text-gray-600">/ <%= plan.frequency %></span>
          </div>
        </div>

        <!-- Plan Details -->
        <div class="p-6">
          <ul class="space-y-3 mb-6">
            <li class="flex items-start">
              <span class="text-green-600 mr-2">✓</span>
              <span class="text-gray-700"><%= pluralize(plan.bags_per_delivery, 'bag') %> per delivery</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2">✓</span>
              <span class="text-gray-700">Delivered <%= plan.frequency %></span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2">✓</span>
              <span class="text-gray-700">Freshly roasted to order</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2">✓</span>
              <span class="text-gray-700">Free shipping</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2">✓</span>
              <span class="text-gray-700">Pause or cancel anytime</span>
            </li>
          </ul>

          <%= link_to "Customize This Plan", customize_subscription_path(plan_id: plan.id), class: "block w-full text-center bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Additional Info -->
  <div class="bg-gray-50 p-8 rounded-lg text-center">
    <h3 class="text-2xl font-bold text-gray-900 mb-3">Not Sure Which Plan?</h3>
    <p class="text-gray-700 mb-4">
      All plans can be customized with different bag sizes, grind options, and delivery frequencies.
      You can change or cancel your subscription anytime.
    </p>
    <%= link_to "Learn More About Subscriptions", subscribe_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </div>
</div>
