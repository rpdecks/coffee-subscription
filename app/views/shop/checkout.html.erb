<% content_for :title, "Checkout - Acer Coffee" %>

<style>
  [id^="checkout-product-copy-"],
  [id^="checkout-product-copy-"] h2,
  [id^="checkout-product-copy-"] p {
    text-align: center;
  }

  @media (min-width: 640px) {
    [id^="checkout-product-copy-"] {
      margin-left: 10px;
    }
    [id^="checkout-product-copy-"] h2,
    [id^="checkout-product-copy-"] p {
      text-align: left;
    }
  }
</style>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-serif font-bold text-gray-900 mb-8">Shopping Cart</h1>

    <div class="mb-6 rounded-lg border border-amber-200 bg-amber-50 px-4 py-3 text-amber-900">
      <h3 class="text-2xl font-semibold font-serif">Local pickup/deliveries only for now.</h3>
    </div>

    <div class="card p-5 sm:p-8">
      <% if @products_with_quantities.any? %>
        <!-- Cart Items -->
        <div class="divide-y divide-gray-200 mb-8">
          <% @products_with_quantities.each do |item| %>
            <div class="py-5 flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-start">
              <div class="flex flex-col gap-3 sm:gap-0 sm:flex-row sm:items-start flex-1 min-w-0">
                 <div class="checkout-cart-thumb mx-auto sm:mx-0 bg-white rounded-lg border border-gray-200 overflow-hidden flex items-center justify-center flex-shrink-0"
                   style="width: 8rem; height: 8rem; min-width: 8rem; max-width: 8rem; min-height: 8rem; max-height: 8rem;">
                  <% featured_image = item[:product].featured_image_attachment %>
                  <% if featured_image.present? %>
                    <%= image_tag featured_image,
                        alt: item[:product].name,
                        width: 96,
                        height: 96,
                      class: "checkout-cart-thumb-image block !w-full !h-full",
                      style: "width: 100%; height: 100%; object-fit: cover; object-position: center;" %>
                  <% elsif item[:product].carousel_images.any? %>
                    <%= image_tag item[:product].carousel_images.first,
                        alt: item[:product].name,
                        width: 96,
                        height: 96,
                      class: "checkout-cart-thumb-image block !w-full !h-full",
                      style: "width: 100%; height: 100%; object-fit: cover; object-position: center;" %>
                  <% else %>
                    <svg class="w-10 h-10 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6z"/>
                    </svg>
                  <% end %>
                </div>

                <div id="checkout-product-copy-<%= item[:product].id %>" class="flex-1 min-w-0">
                  <h2 class="text-2xl sm:text-2xl font-semibold text-gray-900"><%= item[:product].name %></h2>
                  <p class="mt-1 text-xl font-bold text-gray-900 sm:hidden">
                    $<%= '%.2f' % (item[:product].price * item[:quantity]) %>
                  </p>

                </div>
              </div>

              <div class="text-right sm:ml-auto sm:pt-0">
                <p class="hidden sm:block text-lg font-bold text-gray-900">
                  $<%= '%.2f' % (item[:product].price * item[:quantity]) %>
                </p>

                <div class="hidden sm:mt-0 sm:flex sm:flex-col sm:items-end sm:gap-2">
                  <div class="sm:flex sm:items-center sm:gap-3">
                    <span class="text-sm font-normal text-gray-700">Qty:</span>

                    <%= form_with url: shop_update_cart_path(item[:product].id), method: :patch, local: true, class: "inline" do |f| %>
                      <%= f.hidden_field :quantity, value: item[:quantity] - 1 %>
                      <%= f.submit "−",
                          class: "h-8 w-8 rounded-full border border-gray-700 text-gray-700 text-sm leading-none hover:bg-gray-100 #{'opacity-40 cursor-not-allowed border-gray-300 text-gray-300 hover:bg-transparent' if item[:quantity] <= 1}",
                          disabled: item[:quantity] <= 1 %>
                    <% end %>

                    <span class="inline-flex h-8 min-w-8 items-center justify-center rounded bg-gray-100 px-3 text-sm text-gray-900"><%= item[:quantity] %></span>

                    <%= form_with url: shop_update_cart_path(item[:product].id), method: :patch, local: true, class: "inline" do |f| %>
                      <%= f.hidden_field :quantity, value: item[:quantity] + 1 %>
                      <%= f.submit "+", class: "h-8 w-8 rounded-full border border-gray-700 text-gray-700 text-sm leading-none hover:bg-gray-100" %>
                    <% end %>
                  </div>

                  <%= link_to "Remove", shop_remove_from_cart_path(item[:product].id),
                      method: :delete, data: { turbo_method: :delete },
                      class: "text-red-600 hover:text-red-700 text-sm font-medium" %>
                </div>

                <div class="sm:hidden mt-0 w-full flex flex-col items-center gap-2">
                  <div class="flex items-center gap-2">
                    <span class="text-lg font-normal text-gray-700">Qty:</span>

                    <%= form_with url: shop_update_cart_path(item[:product].id), method: :patch, local: true, class: "inline" do |f| %>
                      <%= f.hidden_field :quantity, value: item[:quantity] - 1 %>
                      <%= f.submit "−",
                          class: "h-8 w-8 rounded-full border border-gray-700 text-gray-700 text-base leading-none hover:bg-gray-100 #{'opacity-40 cursor-not-allowed border-gray-300 text-gray-300 hover:bg-transparent' if item[:quantity] <= 1}",
                          disabled: item[:quantity] <= 1 %>
                    <% end %>

                    <span class="inline-flex h-9 min-w-9 items-center justify-center rounded bg-gray-100 px-2 text-base text-gray-900"><%= item[:quantity] %></span>

                    <%= form_with url: shop_update_cart_path(item[:product].id), method: :patch, local: true, class: "inline" do |f| %>
                      <%= f.hidden_field :quantity, value: item[:quantity] + 1 %>
                      <%= f.submit "+", class: "h-8 w-8 rounded-full border border-gray-700 text-gray-700 text-base leading-none hover:bg-gray-100" %>
                    <% end %>
                  </div>

                  <%= link_to "✕ Remove", shop_remove_from_cart_path(item[:product].id),
                      method: :delete, data: { turbo_method: :delete },
                      class: "text-gray-600 hover:text-gray-800 text-base font-semibold" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Order Summary -->
        <div class="border-t pt-8">
          <div class="space-y-3">
            <div class="flex justify-between text-base">
              <span class="text-gray-600">Subtotal</span>
              <span class="font-medium text-gray-900">$<%= '%.2f' % @subtotal %></span>
            </div>
            <div class="flex justify-between text-base">
              <span class="text-gray-600">Tax</span>
              <span class="font-medium text-gray-900">$<%= '%.2f' % @tax %></span>
            </div>
            <div class="flex justify-between text-xl font-bold pt-3">
              <span>Total</span>
              <span class="text-amber-600">$<%= '%.2f' % @total %></span>
            </div>
          </div>

          <!-- Checkout Button -->
          <div class="mt-8" id="checkout-button-container">
            <div class="mb-4 flex items-start gap-3">
              <input type="checkbox" id="newsletter-opt-in" class="mt-1 h-4 w-4 rounded border-gray-300 text-amber-600 focus:ring-amber-600" value="1" />
              <div>
                <label for="newsletter-opt-in" class="text-sm font-medium text-gray-700">Subscribe to the newsletter</label>
                <p class="text-xs text-gray-500">Offers, deals, news, and more!</p>
              </div>
            </div>

            <button onclick="createCheckoutSession()"
                  class="w-full px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors font-medium">
              Proceed to Checkout
            </button>
          </div>

          <%= link_to "← Continue Shopping", shop_path, class: "block text-center mt-4 text-gray-600 hover:text-gray-900" %>
        </div>

        <script>
          async function createCheckoutSession() {
            const button = document.querySelector('#checkout-button-container button');
            const newsletterOptIn = document.querySelector('#newsletter-opt-in')?.checked;
            button.disabled = true;
            button.textContent = 'Processing...';

            const cartItems = <%= raw @products_with_quantities.map { |i|
              { product_id: i[:product].id, quantity: i[:quantity] }
            }.to_json %>;

            try {
              const response = await fetch('<%= shop_create_checkout_path %>', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
                },
                body: JSON.stringify({ cart_items: cartItems, newsletter_opt_in: newsletterOptIn ? '1' : '0' })
              });

              const data = await response.json();

              if (data.checkout_url) {
                window.location.href = data.checkout_url;
              } else {
                alert('Error creating checkout session. Please try again.');
                button.disabled = false;
                button.textContent = 'Proceed to Checkout';
              }
            } catch (error) {
              console.error('Error:', error);
              alert('An error occurred. Please try again.');
              button.disabled = false;
              button.textContent = 'Proceed to Checkout';
            }
          }
        </script>
      <% else %>
        <div class="text-center py-16">
          <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <h3 class="mt-4 text-xl font-medium text-gray-900">Your cart is empty</h3>
          <p class="mt-2 text-gray-500">Add some delicious coffee to get started!</p>
          <%= link_to "Browse Shop", shop_path, class: "mt-6 inline-block bg-amber-600 text-white px-8 py-3 rounded-lg hover:bg-amber-700 transition font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
