<% content_for :title, "Checkout - Acer Coffee" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Shopping Cart</h1>

    <div class="bg-white rounded-lg shadow-md p-8">
      <% if @products_with_quantities.any? %>
        <!-- Cart Items -->
        <div class="divide-y divide-gray-200 mb-8">
          <% @products_with_quantities.each do |item| %>
            <div class="py-6 flex items-center justify-between">
              <div class="flex items-center flex-1">
                <!-- Placeholder Image -->
                <div class="w-24 h-24 bg-gradient-to-br from-amber-100 to-amber-200 rounded flex items-center justify-center flex-shrink-0">
                  <svg class="w-12 h-12 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6z"/>
                  </svg>
                </div>

                <div class="ml-6 flex-1">
                  <h3 class="text-lg font-medium text-gray-900"><%= item[:product].name %></h3>
                  <p class="text-gray-600 text-sm mt-1">$<%= '%.2f' % item[:product].price %> each</p>

                  <%= form_with url: shop_update_cart_path(item[:product].id), method: :patch, local: true, class: "mt-2" do |f| %>
                    <div class="flex items-center gap-2">
                      <%= f.number_field :quantity, value: item[:quantity], min: 0, max: 10,
                          class: "w-20 border border-gray-300 rounded px-3 py-2 text-sm" %>
                      <%= f.submit "Update", class: "text-sm text-blue-600 hover:text-blue-700" %>
                      <%= link_to "Remove", shop_remove_from_cart_path(item[:product].id),
                          method: :delete, data: { turbo_method: :delete },
                          class: "text-sm text-red-600 hover:text-red-700 ml-2" %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="text-right ml-6">
                <p class="text-lg font-bold text-gray-900">
                  $<%= '%.2f' % (item[:product].price * item[:quantity]) %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Order Summary -->
        <div class="border-t pt-8">
          <div class="space-y-3">
            <div class="flex justify-between text-base">
              <span class="text-gray-600">Subtotal</span>
              <span class="font-medium text-gray-900">$<%= '%.2f' % @subtotal %></span>
            </div>
            <div class="flex justify-between text-base">
              <span class="text-gray-600">Shipping</span>
              <span class="font-medium text-gray-900">$<%= '%.2f' % @shipping %></span>
            </div>
            <% if @tax > 0 %>
              <div class="flex justify-between text-base">
                <span class="text-gray-600">Tax</span>
                <span class="font-medium text-gray-900">$<%= '%.2f' % @tax %></span>
              </div>
            <% end %>
            <div class="flex justify-between text-xl font-bold border-t pt-3">
              <span>Total</span>
              <span class="text-amber-600">$<%= '%.2f' % @total %></span>
            </div>
          </div>

          <!-- Checkout Button -->
          <div class="mt-8" id="checkout-button-container">
            <div class="mb-4 flex items-start gap-3">
              <input type="checkbox" id="newsletter-opt-in" class="mt-1 h-4 w-4 rounded border-gray-300 text-amber-600 focus:ring-amber-600" value="1" />
              <div>
                <label for="newsletter-opt-in" class="text-sm font-medium text-gray-700">Subscribe to the newsletter</label>
                <p class="text-xs text-gray-500">Optional. You can sign up again anytime.</p>
              </div>
            </div>

            <button onclick="createCheckoutSession()"
                    class="w-full bg-amber-600 text-white py-4 rounded-lg hover:bg-amber-700 transition font-bold text-lg">
              Proceed to Checkout
            </button>
          </div>

          <%= link_to "â† Continue Shopping", shop_path, class: "block text-center mt-4 text-gray-600 hover:text-gray-900" %>
        </div>

        <script>
          async function createCheckoutSession() {
            const button = document.querySelector('#checkout-button-container button');
            const newsletterOptIn = document.querySelector('#newsletter-opt-in')?.checked;
            button.disabled = true;
            button.textContent = 'Processing...';

            const cartItems = <%= raw @products_with_quantities.map { |i|
              { product_id: i[:product].id, quantity: i[:quantity] }
            }.to_json %>;

            try {
              const response = await fetch('<%= shop_create_checkout_path %>', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
                },
                body: JSON.stringify({ cart_items: cartItems, newsletter_opt_in: newsletterOptIn ? '1' : '0' })
              });

              const data = await response.json();

              if (data.checkout_url) {
                window.location.href = data.checkout_url;
              } else {
                alert('Error creating checkout session. Please try again.');
                button.disabled = false;
                button.textContent = 'Proceed to Checkout';
              }
            } catch (error) {
              console.error('Error:', error);
              alert('An error occurred. Please try again.');
              button.disabled = false;
              button.textContent = 'Proceed to Checkout';
            }
          }
        </script>
      <% else %>
        <div class="text-center py-16">
          <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <h3 class="mt-4 text-xl font-medium text-gray-900">Your cart is empty</h3>
          <p class="mt-2 text-gray-500">Add some delicious coffee to get started!</p>
          <%= link_to "Browse Shop", shop_path, class: "mt-6 inline-block bg-amber-600 text-white px-8 py-3 rounded-lg hover:bg-amber-700 transition font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
