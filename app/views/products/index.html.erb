<div class="max-w-7xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Our Products</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <div class="h-48 bg-gray-200 flex items-center justify-center">
          <span class="text-gray-400 text-6xl">â˜•</span>
        </div>
        <div class="p-6">
          <div class="flex justify-between items-start mb-2">
            <h3 class="text-xl font-bold text-gray-900"><%= product.name %></h3>
            <span class="text-lg font-semibold text-blue-600">$<%= sprintf('%.2f', product.price) %></span>
          </div>
          
          <% if product.coffee? %>
            <p class="text-sm text-gray-500 mb-2"><%= product.weight_oz %>oz</p>
          <% end %>
          
          <p class="text-gray-700 mb-4"><%= truncate(product.description, length: 100) %></p>
          
          <% if product.in_stock? %>
            <%= link_to "View Details", product_path(product), class: "block w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
          <% else %>
            <span class="block w-full text-center bg-gray-400 text-white px-4 py-2 rounded cursor-not-allowed">Out of Stock</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @products.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-600 text-lg">No products available at this time.</p>
    </div>
  <% end %>
</div>
