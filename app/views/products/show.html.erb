<div class="container mx-auto px-4 py-12">
  <div class="max-w-6xl mx-auto">
    <%= link_to products_path, class: "inline-flex items-center gap-2 text-brown hover:text-brown/80 mb-8 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Products
    <% end %>

    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
      <div class="md:flex">
        <!-- Product Image -->
        <div class="md:w-1/2 bg-gradient-to-br from-amber-50 via-orange-50 to-brown/5 flex items-center justify-center relative overflow-hidden" style="min-height: 500px;">
          <% carousel_images = @product.carousel_images %>

          <% if carousel_images.any? %>
            <div
              class="absolute inset-0 group"
              data-controller="product-carousel"
              data-product-carousel-count-value="<%= carousel_images.length %>"
            >
              <div
                class="h-full w-full overflow-hidden"
                data-action="pointerdown->product-carousel#pointerdown pointermove->product-carousel#pointermove pointerup->product-carousel#pointerup pointercancel->product-carousel#pointerup"
                style="touch-action: pan-y;"
              >
                <div class="flex h-full w-full" data-product-carousel-target="track">
                  <% carousel_images.each do |img| %>
                    <div class="h-full w-full flex-none">
                      <%= image_tag img, alt: @product.name, class: "w-full h-full object-cover" %>
                    </div>
                  <% end %>
                </div>
              </div>

              <% if carousel_images.length > 1 %>
                <button
                  type="button"
                  aria-label="Previous image"
                  class="absolute left-6 top-1/2 -translate-y-1/2 bg-white/90 backdrop-blur h-10 w-10 rounded-full shadow-sm ring-1 ring-black/10 flex items-center justify-center text-gray-700 opacity-0 group-hover:opacity-100 hover:bg-white focus:opacity-100 focus:outline-none focus-visible:ring-2 focus-visible:ring-brown/30 transition"
                  data-action="product-carousel#prev"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                </button>
                <button
                  type="button"
                  aria-label="Next image"
                  class="absolute right-6 top-1/2 -translate-y-1/2 bg-white/90 backdrop-blur h-10 w-10 rounded-full shadow-sm ring-1 ring-black/10 flex items-center justify-center text-gray-700 opacity-0 group-hover:opacity-100 hover:bg-white focus:opacity-100 focus:outline-none focus-visible:ring-2 focus-visible:ring-brown/30 transition"
                  data-action="product-carousel#next"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </button>
              <% end %>
            </div>
          <% else %>
            <!-- SVG Pattern Background -->
            <div class="absolute inset-0 opacity-30">
              <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 500">
                <circle cx="200" cy="250" r="120" fill="url(#coffee-gradient-detail)" opacity="0.4"/>
                <circle cx="150" cy="180" r="60" fill="url(#coffee-gradient-detail)" opacity="0.3"/>
                <circle cx="280" cy="320" r="80" fill="url(#coffee-gradient-detail)" opacity="0.3"/>
                <circle cx="100" cy="350" r="50" fill="url(#coffee-gradient-detail)" opacity="0.2"/>
                <defs>
                  <radialGradient id="coffee-gradient-detail">
                    <stop offset="0%" style="stop-color:#4e342e;stop-opacity:0.4" />
                    <stop offset="100%" style="stop-color:#6d4c41;stop-opacity:0" />
                  </radialGradient>
                </defs>
              </svg>
            </div>

            <!-- Coffee Cup Emoji -->
            <div class="relative z-10 text-brown/30 text-9xl">â˜•</div>
          <% end %>

          <% if @product.weight_oz %>
            <div class="absolute top-6 right-6 bg-white/95 backdrop-blur px-4 py-2 rounded-full text-lg font-medium text-gray-700 shadow-md z-20">
              <%= format_ounces(@product.weight_oz) %>
            </div>
          <% end %>
        </div>

        <!-- Product Details -->
        <div class="md:w-1/2 p-8 lg:p-12">
          <div class="flex justify-between items-start mb-6">
            <h1 class="text-4xl font-bold text-gray-900"><%= @product.name %></h1>
            <span class="text-3xl font-bold text-brown whitespace-nowrap ml-4">$<%= sprintf('%.2f', @product.price_cents / 100.0) %></span>
          </div>

          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Description</h2>
            <p class="text-gray-700 leading-relaxed text-lg"><%= @product.description %></p>
          </div>

          <% if @product.coffee? %>
            <div class="mb-8 p-6 bg-gray-50 rounded-lg">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Coffee Details</h2>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-brown mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700"><strong>Weight:</strong> <%= format_ounces(@product.weight_oz) %> bag</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-brown mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">Available in multiple grind options</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-brown mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">Roasted to order for maximum freshness</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-brown mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">Ethically sourced and sustainably grown</span>
                </li>
              </ul>
            </div>
          <% end %>

          <!-- Action Buttons -->
          <div class="space-y-4">
            <% if @product.inventory_count.nil? || @product.inventory_count > 0 %>
              <% if user_signed_in? %>
                <%= link_to subscribe_path, class: "block w-full text-center bg-brown text-white px-6 py-4 rounded-lg text-lg font-medium hover:bg-brown/90 transition-colors" do %>
                  Start Subscription
                <% end %>
              <% else %>
                <%= link_to new_user_session_path, class: "block w-full text-center bg-brown text-white px-6 py-4 rounded-lg text-lg font-medium hover:bg-brown/90 transition-colors" do %>
                  Sign In to Order
                <% end %>
              <% end %>
            <% else %>
              <span class="block w-full text-center bg-gray-300 text-gray-600 px-6 py-4 rounded-lg text-lg font-medium cursor-not-allowed">
                Out of Stock
              </span>
            <% end %>

            <% unless user_signed_in? %>
            <p class="text-center text-gray-600">
              Don't have an account?
              <%= link_to "Sign up", new_user_registration_path, class: "text-brown hover:text-brown/80 font-medium" %> to get started
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @product.coffee? %>
    <div class="mt-8 bg-blue-50 p-6 rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Subscribe & Save</h2>
      <p class="text-gray-700 mb-4">
        Get this coffee delivered regularly with a subscription plan. Save money and never run out!
      </p>
      <%= link_to "View Subscription Plans", products_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    </div>
  <% end %>
</div>
