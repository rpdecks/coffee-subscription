<div class="max-w-7xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">My Dashboard</h1>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Active Subscription -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-bold mb-4">My Subscription</h2>
        <% if @subscription %>
          <div class="bg-green-50 p-4 rounded-lg">
            <p class="font-semibold text-lg mb-2"><%= @subscription.subscription_plan.name %></p>
            <p class="text-gray-700">Status: <span class="capitalize"><%= @subscription.status %></span></p>
            <% if @subscription.next_delivery_date %>
              <p class="text-gray-700">Next Delivery: <%= @subscription.next_delivery_date.strftime("%B %d, %Y") %></p>
            <% end %>
            <div class="mt-4 space-x-2">
              <%= link_to "Manage Subscription", dashboard_subscription_path(@subscription), class: "text-brown hover:text-brown-dark font-medium" %>
            </div>
          </div>
        <% else %>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-gray-700 mb-4">You don't have an active subscription yet.</p>
            <%= link_to "Browse Subscription Plans", products_path, class: "bg-brown text-white px-4 py-2 rounded hover:bg-brown-dark inline-block" %>
          </div>
        <% end %>
      </div>

      <!-- Recent Orders -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-bold mb-4">Recent Orders</h2>
        <% if @recent_orders.any? %>
          <div class="space-y-4">
            <% @recent_orders.each do |order| %>
              <div class="border rounded-lg p-4">
                <div class="flex justify-between items-start mb-2">
                  <div>
                    <p class="font-semibold"><%= order.order_number %></p>
                    <p class="text-sm text-gray-600"><%= order.created_at.strftime("%B %d, %Y") %></p>
                  </div>
                  <span class="px-3 py-1 rounded text-sm capitalize <%= order.status == 'delivered' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= order.status %>
                  </span>
                </div>
                <p class="text-gray-700">Total: $<%= sprintf('%.2f', order.total) %></p>
                <%= link_to "View Details", dashboard_order_path(order), class: "text-blue-600 hover:text-blue-800 text-sm" %>
              </div>
            <% end %>
          </div>
          <%= link_to "View All Orders", dashboard_orders_path, class: "text-blue-600 hover:text-blue-800 mt-4 inline-block" %>
        <% else %>
          <p class="text-gray-600">No orders yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Links -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-xl font-bold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><%= link_to "Edit Profile", edit_dashboard_profile_path, class: "text-blue-600 hover:text-blue-800" %></li>
          <li><%= link_to "Manage Addresses", dashboard_addresses_path, class: "text-blue-600 hover:text-blue-800" %></li>
          <li><%= link_to "Payment Methods", dashboard_payment_methods_path, class: "text-blue-600 hover:text-blue-800" %></li>
          <li><%= link_to "Coffee Preferences", edit_dashboard_coffee_preference_path, class: "text-blue-600 hover:text-blue-800" %></li>
          <li><%= link_to "Order History", dashboard_orders_path, class: "text-blue-600 hover:text-blue-800" %></li>
        </ul>
      </div>

      <!-- Account Info -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-xl font-bold mb-4">Account Info</h3>
        <p class="text-gray-700 mb-1"><%= current_user.full_name %></p>
        <p class="text-gray-600 text-sm"><%= current_user.email %></p>
        <% if current_user.phone.present? %>
          <p class="text-gray-600 text-sm"><%= current_user.phone %></p>
        <% end %>
      </div>

      <!-- Addresses -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold">Saved Addresses</h3>
          <%= link_to new_dashboard_address_path, class: "text-blue-600 hover:text-blue-800" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          <% end %>
        </div>
        <% if @addresses.any? %>
          <p class="text-gray-700"><%= pluralize(@addresses.count, 'address') %> on file</p>
          <%= link_to "Manage", dashboard_addresses_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
        <% else %>
          <p class="text-gray-600">No addresses saved</p>
        <% end %>
      </div>

      <!-- Payment Methods -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold">Payment Methods</h3>
          <%= link_to new_dashboard_payment_method_path, class: "text-blue-600 hover:text-blue-800" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          <% end %>
        </div>
        <% if @payment_methods.any? %>
          <p class="text-gray-700"><%= pluralize(@payment_methods.count, 'card') %> on file</p>
          <%= link_to "Manage", dashboard_payment_methods_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
        <% else %>
          <p class="text-gray-600">No payment methods saved</p>
        <% end %>
      </div>

      <!-- Recent Orders (Mobile Only - Expandable) -->
      <div class="lg:hidden bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-bold">Recent Orders</h3>
          <button id="toggle-orders-mobile" class="text-gray-600 hover:text-gray-900">
            <svg id="orders-chevron" class="w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
        </div>
        <div id="orders-content-mobile" class="hidden space-y-3">
          <% if @recent_orders.any? %>
            <% @recent_orders.first(3).each do |order| %>
              <%= link_to dashboard_order_path(order), class: "block border rounded-lg p-3 hover:border-brown/30 transition-colors" do %>
                <div class="flex justify-between items-start mb-1">
                  <div>
                    <p class="font-semibold text-sm"><%= order.order_number %></p>
                    <p class="text-xs text-gray-600"><%= order.created_at.strftime("%B %d, %Y") %></p>
                  </div>
                  <span class="px-2 py-1 rounded text-xs capitalize <%= order.status == 'delivered' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= order.status %>
                  </span>
                </div>
                <p class="text-sm text-gray-700">$<%= sprintf('%.2f', order.total_cents / 100.0) %></p>
              <% end %>
            <% end %>
            <%= link_to "View All Orders", dashboard_orders_path, class: "block text-center text-blue-600 hover:text-blue-800 text-sm mt-3 pt-3 border-t border-gray-200" %>
          <% else %>
            <p class="text-gray-600 text-sm">No orders yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('turbo:load', () => {
    const toggleButton = document.getElementById('toggle-orders-mobile');
    const ordersContent = document.getElementById('orders-content-mobile');
    const chevron = document.getElementById('orders-chevron');
    
    if (toggleButton && ordersContent && chevron) {
      toggleButton.addEventListener('click', () => {
        ordersContent.classList.toggle('hidden');
        chevron.classList.toggle('rotate-180');
      });
    }
  });
</script>
