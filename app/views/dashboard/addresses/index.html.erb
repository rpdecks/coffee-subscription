<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900">My Addresses</h1>
    <%= link_to new_dashboard_address_path, class: "bg-brown text-white p-3 rounded hover:bg-brown/90" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
    <% end %>
  </div>

  <% if @addresses.any? %>
    <!-- Shipping Addresses -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Shipping Addresses</h2>
      <% shipping_addresses = @addresses.where(address_type: :shipping) %>
      <% if shipping_addresses.any? %>
        <div class="grid gap-4">
          <% shipping_addresses.each do |address| %>
            <div class="bg-white rounded-lg shadow p-6 <%= 'ring-2 ring-green' if address.is_default %>">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <% if address.is_default %>
                      <span class="bg-green text-white px-3 py-1 text-sm rounded font-semibold">Default Shipping</span>
                    <% end %>
                  </div>
                  <p class="text-gray-700"><%= address.street_address %></p>
                  <% if address.street_address_2.present? %>
                    <p class="text-gray-700"><%= address.street_address_2 %></p>
                  <% end %>
                  <p class="text-gray-700">
                    <%= address.city %>, <%= address.state %> <%= address.zip_code %>
                  </p>
                  <p class="text-gray-700"><%= address.country %></p>
                </div>
                <div class="flex gap-2">
                  <%= link_to "Edit", edit_dashboard_address_path(address), class: "text-blue-600 hover:text-blue-800" %>
                  <%= button_to "Delete", dashboard_address_path(address), method: :delete, 
                      data: { turbo_confirm: "Are you sure you want to delete this address?" }, 
                      class: "text-red-600 hover:text-red-800" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">No shipping addresses yet.</p>
      <% end %>
    </div>

    <!-- Billing Addresses -->
    <div>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Billing Addresses</h2>
      <% billing_addresses = @addresses.where(address_type: :billing) %>
      <% if billing_addresses.any? %>
        <div class="grid gap-4">
          <% billing_addresses.each do |address| %>
            <div class="bg-white rounded-lg shadow p-6 <%= 'ring-2 ring-green' if address.is_default %>">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <% if address.is_default %>
                      <span class="bg-green text-white px-3 py-1 text-sm rounded font-semibold">Default Billing</span>
                    <% end %>
                  </div>
                  <p class="text-gray-700"><%= address.street_address %></p>
                  <% if address.street_address_2.present? %>
                    <p class="text-gray-700"><%= address.street_address_2 %></p>
                  <% end %>
                  <p class="text-gray-700">
                    <%= address.city %>, <%= address.state %> <%= address.zip_code %>
                  </p>
                  <p class="text-gray-700"><%= address.country %></p>
                </div>
                <div class="flex gap-2">
                  <%= link_to "Edit", edit_dashboard_address_path(address), class: "text-blue-600 hover:text-blue-800" %>
                  <%= button_to "Delete", dashboard_address_path(address), method: :delete, 
                      data: { turbo_confirm: "Are you sure you want to delete this address?" }, 
                      class: "text-red-600 hover:text-red-800" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">No billing addresses yet.</p>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-8 text-center">
      <p class="text-gray-600">You don't have any saved addresses yet.</p>
    </div>
  <% end %>

  <div class="mt-8">
    <%= link_to "â† Back to Dashboard", dashboard_root_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
