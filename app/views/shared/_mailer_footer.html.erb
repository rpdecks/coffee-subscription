<% business_name = ENV.fetch("BUSINESS_NAME", "Acer Coffee") %>
<% support_email = ENV.fetch("SUPPORT_EMAIL", "support@acercoffee.com") %>

<div style="background-color: #f9fafb; padding: 24px; text-align: center; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 13px; line-height: 1.5; color: #6b7280; border-top: 1px solid #e5e7eb;">
  <div style="margin-bottom: 10px; font-weight: 700; color: #1f2937;">
    <%= business_name %>
  </div>

  <div style="margin-bottom: 12px;">
    Premium craft coffee, delivered fresh to your door
  </div>

  <div style="margin-bottom: 12px; color: #9ca3af;">
    <a href="mailto:<%= support_email %>" style="color: #9ca3af; text-decoration: none;"><%= support_email %></a>
  </div>

  <% if ENV["BUSINESS_ADDRESS_LINE1"].present? || ENV["BUSINESS_CITY_STATE_ZIP"].present? %>
    <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid #e5e7eb; font-size: 12px; color: #9ca3af;">
      <% if ENV["BUSINESS_ADDRESS_LINE1"].present? %>
        <div><%= ENV["BUSINESS_ADDRESS_LINE1"] %><% if ENV["BUSINESS_ADDRESS_LINE2"].present? %>, <%= ENV["BUSINESS_ADDRESS_LINE2"] %><% end %></div>
      <% end %>
      <% if ENV["BUSINESS_CITY_STATE_ZIP"].present? %>
        <div><%= ENV["BUSINESS_CITY_STATE_ZIP"] %></div>
      <% end %>
      <div style="margin-top: 10px;">Questions? Just reply to this email.</div>
    </div>
  <% else %>
    <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid #e5e7eb; font-size: 12px; color: #9ca3af;">
      Questions? Just reply to this email.
    </div>
  <% end %>
</div>
